%div{:class => 'col-md-6'}
	%h1{:style => "font-size:100px;text-align:center"}
		=@location.town.upcase

%div{:class => 'col-md-6'}
	%div
		#temp
		.divh= "#{@tempC} °C"
	%div
		#drop
		.divh= "#{@humidity} %"
	%div
		%p= @icon

%div{:class => 'row'}
	%div{:class => 'col-md-12'}

	- if @tempC > 28
		%div{:style => "font-size:40px;text-align:center;color:red"}
			Pensez à vous hydrater

	- if @tempC < 5
		%div{:style => "font-size:40px;text-align:center;color:red"}
			Fous ta cagoule !

%div{:class => 'row'}
	%div{:class => 'col-md-6'}
	- if @tempC > 28
		%iframe{:allowfullscreen => "", :frameborder => "0", :height => "360", :src => "https://www.youtube.com/embed/QITYRHQ_8Us?start=47&end=59&autoplay=1", :width => "640"}
		
	%div{:class => 'col-md-6'}
	- if @tempC < 5
		%iframe{:allowfullscreen => "", :frameborder => "0", :height => "315", :src => "https://www.youtube.com/embed/Ud_-AuBmp6Q?start=40&end=52&autoplay=1", :width => "420"}
